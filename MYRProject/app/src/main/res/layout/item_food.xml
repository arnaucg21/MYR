<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginHorizontal="4dp"
    android:backgroundTint="#E4C99D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hamburger_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamburger"
                android:textColor="#4A2E00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bread, Meat, Cheese, Bacon, Salad"
                android:textColor="#4A2E00"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00â‚¬"
                android:textColor="#4A2E00"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Add"
                android:textSize="8sp"
                android:backgroundTint="#DDA54E"
                android:textColor="#FFF3D1" />

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Remove"
                android:textSize="8sp"
                android:backgroundTint="#C96A3F"
                android:textColor="#FFF3D1"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x0"
            android:textColor="#FFF3D1"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
